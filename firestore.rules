rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read portfolio data
    match /portfolio/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow anyone to read general content
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}